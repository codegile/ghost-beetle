{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}

{{#post}}

<div id="main" class="row">
    <div class="row-content buffer-left buffer-right buffer-bottom">
        <div id="post-nav">
            <ul class="clear-after reset plain">
                {{#next_post}}
                <li id="prev-items" class="post-nav"><a href="{{url}}"><i class="fa fa-chevron-left"></i><span class="label">Prev</span></a></li>
                {{/next_post}}
                <li id="all-items" class="post-nav"><a href="#"><i class="icon icon-images"></i></a></li>
                {{#prev_post}}
                <li id="next-items" class="post-nav"><a href="{{url}}"><span class="label">Next</span><i class="fa fa-chevron-right"></i></a></li>
                {{/prev_post}}
            </ul>
        </div>

        <div class="post-area clear-after">
            <article role="main">
                <h5 class="meta-post">
                    {{tags}} - <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                </h5>
                <h1>{{title}}</h1>
                <section>
                    {{content}}
                </section>
            </article>

        </div><!-- post-area -->

        <div class="meta-social">
            <ul class="inline center">
                <li><a href="#" class="twitter-share border-box"><i class="fa fa-twitter fa-lg"></i></a></li>
                <li><a href="#" class="facebook-share border-box"><i class="fa fa-facebook fa-lg"></i></a></li>
                <li><a href="#" class="linkedin-share border-box"><i class="fa fa-linkedin fa-lg"></i></a></li>
            </ul>
        </div>
    </div><!-- row-content -->
</div><!-- row -->
</main><!-- main -->

{{/post}}